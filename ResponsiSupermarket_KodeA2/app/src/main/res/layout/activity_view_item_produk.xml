<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".CRUDItem.ViewItemProduk">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:text="Rincian\nProduk OneMart"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/divRincianProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/style_inputtext">

        <RelativeLayout
            android:id="@+id/divKodeProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Produk:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputKodeProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Z78ui1"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divNamaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divKodeProduk"
            android:padding="16dp">

            <TextView
                android:id="@+id/NamaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Produk:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputNamaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NamaProduk"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="Sabun Mandi"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divKategoriProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divNamaProduk"
            android:padding="16dp">

            <TextView
                android:id="@+id/kategoriProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori Produk:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputKategoriProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kategoriProduk"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="Peralatan Rumah Tangga"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divStokProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divKategoriProduk"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok Produk:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputStokProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="5 Item"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divRincianProduk"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnHapusProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Hapus Produk"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnEditProduk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/black"
            android:text="Edit Produk"
            android:textAllCaps="false"
            android:textSize="18dp" />
    </RelativeLayout>
</RelativeLayout>
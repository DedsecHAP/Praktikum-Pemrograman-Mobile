<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".AdminController.TambahAkunKaryawan">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:text="Tambah Akun\nKaryawan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/divNamaKaryawan"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_below="@+id/judul">

        <TextView
            android:id="@+id/labelNamaKaryawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Karyawan"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputNamaKaryawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelNamaKaryawan"
            android:layout_marginTop="3dp"
            android:background="@drawable/style_inputtext"
            android:backgroundTint="@color/white"
            android:hint="Masukan Nama Karyawan"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divUsername"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_below="@+id/divNamaKaryawan">

        <TextView
            android:id="@+id/labelUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelUsername"
            android:layout_marginTop="3dp"
            android:background="@drawable/style_inputtext"
            android:backgroundTint="@color/white"
            android:hint="Masukan Username"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divPassword"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_below="@+id/divUsername">

        <TextView
            android:id="@+id/labelPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelPassword"
            android:layout_marginTop="3dp"
            android:background="@drawable/style_inputtext"
            android:backgroundTint="@color/white"
            android:hint="Masukan Password"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnTambahKaryawan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/divPassword"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/black"
        android:text="Tambah Akun"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>
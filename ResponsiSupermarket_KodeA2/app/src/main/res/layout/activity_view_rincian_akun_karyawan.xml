<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".AdminController.ViewRincianAkunKaryawan">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:text="Rincian Data \nAkun Karyawan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/divRincianProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/style_inputtext">


        <RelativeLayout
            android:id="@+id/divNamaKaryawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/labelNamaKaryawan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Karyawan:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputNamaKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelNamaKaryawan"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="Admin01"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divNamaKaryawan"
            android:padding="16dp">

            <TextView
                android:id="@+id/labelUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelUsername"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="07342admin1"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/divPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divusername"
            android:padding="16dp">

            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelPassword"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="1234653"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divRincianProduk"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textSize="18dp" />
</RelativeLayout>